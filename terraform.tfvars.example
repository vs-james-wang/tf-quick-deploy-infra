# Copy this file to terraform.tfvars and customize values

aws_region         = "us-west-2"
vpc_cidr           = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"
availability_zone  = "us-west-2a"

instance_type = "t3.micro"
instance_name = "sre-test-instance"

# SSH key pair name (must exist in AWS)
# key_name = "my-key-pair"

# CIDR blocks allowed to SSH (e.g., your IP)
# allowed_ssh_cidrs = ["203.0.113.0/32"]

# Custom AMI ID (leave empty to use latest Amazon Linux 2023)
# ami_id = "ami-xxxxxxxxxxxxxxxxx"

# Aurora Serverless v2 Configuration (minimum resources for lab/testing)
# aurora_engine         = "aurora-postgresql"  # or "aurora-mysql"
# aurora_engine_version = "15.8"               # PostgreSQL 15.8
# aurora_database_name  = "appdb"
# aurora_master_username = "postgres"
# aurora_min_capacity   = 0.5                  # Minimum ACU (0.5 is lowest)
# aurora_max_capacity   = 1                    # Maximum ACU for cost control
# aurora_publicly_accessible = true

# Aurora password (use TF_VAR_aurora_master_password env var, or falls back to db_password)
# export TF_VAR_aurora_master_password="your-secure-password"
